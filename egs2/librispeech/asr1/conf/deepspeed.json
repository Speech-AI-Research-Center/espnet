{
    "train_batch_size": 32,
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 1.0,
    "bf16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 3,
      "overlap_comm": true,
      "contiguous_gradients": true,
      "reduce_scatter": true,
      "reduce_bucket_size": 5e8,
      "allgather_bucket_size": 5e8,
      "prefetch_bucket_size": 5e8,
      "max_live_parameters": 1e9,
      "max_reuse_distance": 1e9
    },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": 0.001,
        "betas": [
          0.9,
          0.95
        ],
        "eps": 1e-8,
        "weight_decay": 3e-7
      }
    }
  }